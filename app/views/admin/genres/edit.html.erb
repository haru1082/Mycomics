<div class="container">
  <div class="row justify-content-md-center mt-5">
    <div class="col-5 text-center border-bottom">
      <h4 class="px-4">ジャンル編集</h4>
    </div>
  </div>
  
  <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
    <div class="row justify-content-md-center mt-5">
      <div class="col-3 text-right">ジャンル</div>
      <div class="col-3">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "新しいジャンル名" %>
      </div>
    </div>
    
    <div class="row justify-content-md-center mt-5">
      <div class="col-auto">
        <%= f.submit "変更を保存", class: "col btn btn-success" %>
      </div>
  
      <div class="col-auto">
        <%= link_to "削除", admin_genre_path, class: "col btn btn-danger", method: :delete, data: { confirm: '本当に消しますか？' } %>
      </div>
    </div>
  <% end %>
</div>