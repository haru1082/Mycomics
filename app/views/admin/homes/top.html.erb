<div class="container">
  <div class="row justify-content-md-center mt-5">
    <div class="col-5 text-center border-bottom">
      <h4 class="px-4">漫画一覧</h4>
    </div>
  </div>
  
  <div class="row justify-content-md-center mt-5">
    <% @comics.each do |comic| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card">
          <img class="card-img-top" src="default-image.jpg">
          <div class="card-body">
            <p class="card-title"><%= comic.title %></p>
            <p class="card-title"><%= comic.volume %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @comics %>
</div>