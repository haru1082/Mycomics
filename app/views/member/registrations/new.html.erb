<div class="container">
  <div class="row mt-5">
    <div class="col-6">
      <h4 class="px-4" style="background-color:#ECECEC;">新規会員登録</h4>
    </div>
  </div>
  <div class= "container mt-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "member/shared/error_messages", resource: resource %>
    
      <div class="row">
        <div class="col-6">ニックネーム</div>
        <div class="col-6">
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "ニックネーム" %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-6">メールアドレス</div>
        <div class="col-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>
      </div>
    
      <div class="row">
        <div class="col-6">パスワード
          <% if @minimum_password_length %>
            （<%= @minimum_password_length %>文字以上）
          <% end %>
        </div>
        <div class="col-6">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>
    
      <div class="row">
        <div class="col-6">パスワード （確認用）</div>
        <div class="col-6">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
<%= render "member/shared/links" %>
</div>