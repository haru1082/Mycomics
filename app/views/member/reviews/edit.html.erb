<div class="container">
  <div class="row justify-content-md-center mt-5">
    <div class="col-5 text-center border-bottom">
      <h4 class="px-4">投稿編集</h4>
    </div>
  </div>
  <div class = "row justify-content-md-center text-success mt-3"><%= flash[:review_edit] %></div>
  <%= form_with(model: @review, url: review_path(@review), method: :PATCH) do |f| %>
    <div class="row justify-content-md-center mt-5">
      <div class="col-3 text-right">漫画タイトル</div>
      <div class="col-3">
        <%= f.text_field :title, autofocus: true, autocomplete: "title", placeholder: "タイトル" %>
      </div>
    </div>
    
    <div class="row justify-content-md-center mt-5">
      <div class="col-3 text-right">感想</div>
      <div class="col-3">
        <%= f.text_field :body, autofocus: true, autocomplete: "body", placeholder: "感想", rows: "3" %>
      </div>
    </div>
    
    <div class="row justify-content-md-center mt-5">
      <div class="col-auto">
        <%= f.submit "編集する", class: "col btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>