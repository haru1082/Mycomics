<div class="container">
  <div class="row justify-content-md-center mt-5">
    <div class="col-5 text-center border-bottom">
      <h4 class="px-4">新規投稿</h4>
    </div>
  </div>
  <div class = "row justify-content-md-center text-success mt-3"><%= flash[:alert] %></div>
  <%= form_with model: Review.new do |f| %>
    <div class = "row justify-content-md-center mt-5">
      <div class="col-lg-3">漫画タイトル</div>
      <div class="col-ig-3">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class = "row justify-content-md-center mt-5">
      <div class="col-lg-3">感想</div>
      <div class="col-ig-3">
        <%= f.text_area :body %>
      </div>
    </div>
    <div class="row justify-content-md-center mt-5">
      <div class="col-auto">
        <%= f.submit "投稿", class: "col btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>